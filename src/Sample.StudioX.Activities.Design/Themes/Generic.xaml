    xmlns:s="clr-namespace:System.Windows.Controls.Primitives;assembly=PresentationFramework"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:sapv="clr-namespace:System.Activities.Presentation.View;assembly=System.Activities.Presentation"
    xmlns:sap="clr-namespace:System.Activities.Presentation;assembly=System.Activities.Presentation">

    <Style x:Key="ActivityPresenter" TargetType="Grid">
        <Setter Property="Width" Value="400" />
    </Style>

    <Style x:Key="ScopeWorkflowItemsPresenterStyle" TargetType="sap:WorkflowItemsPresenter">
        <Setter Property="MinWidth" Value="400" />
        <Setter Property="Margin" Value="0, 5" />
    </Style>

</ResourceDictionary>